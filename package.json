{
    "name": "vscode-ponylang",
    "displayName": "Pony language",
    "description": "Pony language extension",
    "version": "0.0.1",
    "publisher": "renatoathaydes",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "pony",
            "aliases": ["Pony", "pony"],
            "extensions": [".pony"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "pony",
            "scopeName": "source.pony",
            "path": "./syntaxes/pony.tmLanguage"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}